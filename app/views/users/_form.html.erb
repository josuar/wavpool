<%= form_for user, url: user_path do |u| %>
  <div class="form-group">
    <%= u.label :email_address %>
    <%= u.text_field :email_address, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= u.label :password %>
    <%= u.password_field :password, class: 'form-control' %>
  </div>
  
  <%= u.submit 'Sign up', class: 'btn btn-primary' %>
<% end %>