<%= form_for @user, url: user_path do |user| %>
  <div class="form-group">
    <%= user.label :email_address %>
    <%= user.text_field :email_address, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= user.label :password %>
    <%= user.password_field :password, class: 'form-control' %>
  </div>
  
  <%= user.submit 'Sign up', class: 'btn btn-default' %>
<% end %>