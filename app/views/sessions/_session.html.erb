<% if signed_in? %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <%= current_user.profile.display_name %> <span class="caret"></span>
    </a>
  
    <ul class="dropdown-menu">
      <li>
        <%= link_to "Profile", "#/profiles/#{ current_user.profile.id }"%>
      </li>
      <li><%= link_to "Account", '#' %></li>
      
      <li class="divider"></li>
      
      <li><%= link_to "Sign out", session_url, method: :delete %></li>
    </ul>
  </li>
<% else %>
  <li><%= link_to 'Sign up', new_user_url %></li>
  
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      Sign in <span class="caret"></span>
    </a>
  
    <div class="dropdown-menu dropdown-form-container">
      <%= render partial: 'sessions/form' %>
    </div>
  </li>
<% end %>
