<!DOCTYPE html>
<html>
<head>
  <title>WavPool</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  
<header>
  <%= render partial: 'layouts/navbar' %>
</header>

<div class="alerts container">
</div>

<div class="global-player">
  <%= render partial: 'layouts/audio_player' %>
</div>

<main class="container">
  <%= yield %>
</main>

<script>
$(function () {
  WavPool.initialize({
    userId: <%= current_user.id rescue 0 %>,
    s3Bucket: "<%= S3_BUCKET.url %>"
  });
});
</script>

</body>
</html>
