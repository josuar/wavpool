<div class="col-md-10 col-md-offset-1">
  <form class="directUpload">
    <% if (submission.isNew()) { %>
      <h3>Upload a track</h3>
    
      <input type="file" name="submission[remote_url]" class="form-control submission-upload"  />

      <div class="progress">
        <div class="progress-bar submission-progress">
        </div>
      </div>
      <br>
    <% } %>
  
    <h4>Info</h4>
    <hr>
  
    <div class="form-group">
      <label for="submission_title">Title</label>
      <input
        type="text"
        name="submission[title]"
        id="submission_title"
        class="form-control"
        value="<%= submission.escape('title') %>">
    </div>
    
    <div class="row">
      <div class="col-md-2">
        <div class="form-group">
          <label for="submission_image_url">Image</label>
            
          <img src="<%= submission.imageUrl() %>" width="180" height="180" class="img-responsive sub-image-preview" />
        
          <input type="file" name="submission[image_url]" id="submission_image_url" class="form-control sub-image-upload" />
        </div>
      </div>
      
      <div class="col-md-10">
        <div class="form-group">
          <label for="submission_description">Description</label>
          <textarea
            id="submission_description"
            name="submission[description]"
            class="form-control"
            rows="5"><%= submission.escape('description') %></textarea>
          </div>
        </div>
    </div>
  
    <hr>
    
    <button type="submit" class="btn btn-primary pull-right">Submit</button>
  </form>
</div>