<%  if (showDescription) { %>
  <div class="col-xs-10 col-xs-offset-1">
<% } %>
<div class="media">
  <div class="image-container pull-left media-object text-center">
    <img src="<%= WavPool.s3Url(submission.escape("image_url")) %>" class="track-image" />
  </div>

  <div class="media-body">
    <h4 class="media-heading">
      <a href="#" class="pull-left play-button" data-audio-url="<%= WavPool.s3Url(submission.escape('remote_url')) %>"> 
        <h4><span class="glyphicon glyphicon-play"></span></h4>
      </a>

      <a href="#/submissions/<%= submission.id %>"><%= submission.escape('title') %></a>       
      
      <% if (showProfile) { %>
        <small>
          <% if (submission.get("profile")) { %>
          by <a href="#/profiles/<%= submission.get("profile").id %>"><%= submission.get("profile").name %></a>
          <% } %> 
        </small>      
      <% } %>
      <br>
      <time><small>uploaded <%= submission.timestamp() %></small></time>
    </h4>

    <!-- <canvas class="analyzer"></canvas> -->
    <div class="progress track-progress">
      <div class="progress-bar">
      </div>
    </div>
    
    <div class="comment-placeholder"></div>
    
    <% if (submission.isOwnedByCurrentUser()) { %>
    <a class="btn btn-default btn-xs" href="#/submissions/<%= submission.id %>/edit">
      <span class="glyphicon glyphicon-pencil"></span>
     <%  if (showDescription) { %>
       Edit
     <% } %>
    </a>
    <% } %>
    <a class="btn btn-default btn-xs" href="<%= submission.getShareUrl() %>">
      <span class="glyphicon glyphicon-share"></span>
      <%  if (showDescription) { %>
        Share
      <% } %>
    </a>
    <a class="btn btn-default btn-xs" href="<%= WavPool.s3Url(submission.escape('remote_url')) %>">
      <span class="glyphicon glyphicon-download"></span>
      <%  if (showDescription) { %>
        Download
      <% } %>
    </a>
    <a class="btn btn-default btn-xs like-button" href="#">
      <span class="glyphicon glyphicon-heart"></span>
    </a>
    
    <% if (showDescription) { %>
      <hr>
      <p><h4><%= submission.get("description") %></h4></p>
      <hr>
    <% } %>
    
    <div class="comments"></div>
  </div>
</div>

<%  if (showDescription) { %>
</div>
<% } else { %>
<hr>
<% } %>